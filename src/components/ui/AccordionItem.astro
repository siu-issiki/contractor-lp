---
interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props;
---

<details class="group">
  <summary class="cursor-pointer font-medium py-4 flex justify-between items-center border-b border-gray-200 [&::-webkit-details-marker]:hidden marker:hidden">
    <span class="text-gray-900">{question}</span>
    <svg class="w-5 h-5 text-gray-400 transition-transform duration-300 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </summary>
  <div class="py-4 text-gray-600 leading-relaxed text-sm">
    {answer}
  </div>
</details>
