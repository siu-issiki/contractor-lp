---
interface Props {
  step: number;
  title: string;
  description: string;
}

const { step, title, description } = Astro.props;
---

<div class="text-center">
  <div class="w-10 h-10 bg-primary-500 text-white rounded-full flex items-center justify-center font-bold text-lg mx-auto">
    {step}
  </div>
  <h3 class="text-lg font-bold mt-4 mb-2 text-gray-900">{title}</h3>
  <p class="text-gray-600 text-sm leading-relaxed">{description}</p>
</div>
